<!DOCTYPE html><html lang="en"><head>    <meta charset="UTF-8" />    <meta http-equiv="X-UA-Compatible" content="IE=edge" />    <meta name="viewport" content="width=device-width, initial-scale=1.0" />    <title>Program</title>    <style>        .title {            text-align: center;            background-color: #1c2333;            text-align: center;            border: none;            border-radius: 5px;            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);            padding: 5px;        }        .main-container {            background-color: #0f1524;            text-align: center;            border: 1px solid #ccc;            border-radius: 5px;            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);            padding: 10px;        }        .block {            display: inline-block;            padding: 5px;            width: 48%;        }        .textarea {            color: white;            font-size: 16px;            resize: none;            border: none;            border-radius: 5px;            box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.3);            padding: 10px;            background-color: #1d2331;            width: 100%;        }        body {            font-family: 'Roboto', sans-serif;            font-size: 24px;            color: wheat;        }        *,        *:before,        *:after {            box-sizing: border-box;        }        h1 {            background-color: #1c2333;            color: #fff;            padding: 10px;            margin: 0;        }        h2,        h3,        h4,        h5,        h6 {            margin: 0;        }        p {            margin: 0;            padding: 0;        }        label {            color: #fff;            padding: 2px;            border-radius: 3px;            margin: 4px;        }        input[type="submit"] {            background-color: mintcream;            border: none;            color: #333;            padding: 8px 16px;            text-decoration: none;            display: inline-block;            font-size: 24px;            margin: 4px 2px;            cursor: pointer;            border-radius: 10px;        }        select {            text-align: center;            background-position: right center;            padding: 0.5rem;            border: 1px solid #ccc;            border-radius: 4px;            width: 100%;            max-width: 250px;            margin: 5px;            height: 2.5rem;            font-size: 1rem;            color: #333;        }        button {            background-color: mintcream;            border: none;            color: #333;            padding: 8px 16px;            text-decoration: none;            display: inline-block;            font-size: 24px;            margin: 4px 2px;            cursor: pointer;            border-radius: 10px;        }        button:active {            transform: translateY(1px);            box-shadow: none;        }        .popup {            display: inline-block;            padding: 5px;            width: 25%;            opacity: 0;            transition: opacity 0.5s ease-in-out, transform 0.5s ease-in-out;            position: fixed;            top: 15%;            right: 20px;            background-color: rgba(255, 255, 255, 0.8);            z-index: 1;            border-radius: 10px;            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);        }        .popup.show {            opacity: 1;            transform: translateX(-20%) translateY(0);            right: 20px;        }    </style></head><body><div class="title">    <h1>Online Compiler</h1></div><div class="main-container">    <button onclick="location.href='/task/send'">Онлайн компилятор</button>    <button onclick="location.href='/AntiPlag'">Антиплагиат кода</button></div><div class="main-container">    <form id="myForm" method="POST">        <div>            <select id="lang" name="lang">                <option value="c++">C++</option>            </select>        </div>        <div>            <div class="block">                <textarea class="textarea" id="code" name="code" rows="20"></textarea>            </div>            <div class="block" id="result">                <div class="popup" id="myPopup">                    <p>Текст сообщения</p>                </div>                <textarea class="textarea" id="output" name="output" rows="20"></textarea>            </div>        </div>        <label>Input</label>        <div>            <textarea class="textarea" id="input" rows="4" style="width: 97%"></textarea>        </div>        <button type="submit"value="Run">Run</button>    </form></div><script>    window.onload = function() {        document.getElementById("code").innerHTML = "//Write your code here";    }</script><script>    var form = document.getElementById("myForm");    form.addEventListener("submit", function(e) {        e.preventDefault();        var xhr = new XMLHttpRequest();        xhr.open("POST", "/task/send");        xhr.setRequestHeader("Content-type", "application/x-www-form-urlencoded");        xhr.onreadystatechange = function() {            if (xhr.readyState === 4 && xhr.status === 200) {                var outputTextArea = document.getElementById("output");                var output = xhr.responseText;                if (output.startsWith("error")) {                    openPopup(output)                }                else {                    var delay = 50; // milliseconds                    var i = 0;                    var printOutput = function() {                        if (i < output.length) {                            outputTextArea.value += output.charAt(i);                            i++;                            setTimeout(printOutput, delay);                        }                    };                    printOutput();                }            }        };        xhr.send("lang=" + encodeURIComponent(document.getElementById("lang").value) + "&code=" + encodeURIComponent(document.getElementById("code").value) + "&input=" + encodeURIComponent(document.getElementById("input").value));    });</script><script>    function openPopup(message) {        var popup = document.getElementById("myPopup");        popup.querySelector('p').textContent = message;        popup.classList.add("show");        setTimeout(function() {            popup.classList.remove("show");        }, 10000);    }    function closePopup() {        var popup = document.getElementById("myPopup");        popup.classList.remove("show");    }</script></body></html>