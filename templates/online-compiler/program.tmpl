<!DOCTYPE html><html lang="en">    <head>        <meta charset="UTF-8" />        <meta http-equiv="X-UA-Compatible" content="IE=edge" />        <meta name="viewport" content="width=device-width, initial-scale=1.0" />        <title>Program</title>        <style>            table,            th,            td {                border: 1px solid;            }        </style>    </head>    <body>    <h1>        Program    </h1>    <div class="container">    <form id="myForm" method="POST">        <label for="lang">Choose a language:</label>        <select id="lang" name="lang">            <option value="c++">C++</option>            <option value="go">Go</option>        </select>        <br><br>        <label for="code"></label>        <textarea id="code" name="code" rows="25" cols="100"></textarea>        <br><br>        <label for="input">Input:</label>        <textarea id="input" name="input" rows="1" cols="95"></textarea>        <br><br>        <input type="submit" value="Send">    </form>    </div>    <div id="result"></div>    <script>        var form = document.getElementById("myForm");        form.addEventListener("submit", function(e) {            e.preventDefault();            var xhr = new XMLHttpRequest();            xhr.open("POST", "/task/send");            xhr.setRequestHeader("Content-type", "application/x-www-form-urlencoded");            xhr.onreadystatechange = function() {                if (xhr.readyState === 4 && xhr.status === 200) {                    document.getElementById("result").innerHTML = xhr.responseText;                }            };            xhr.send("lang=" + encodeURIComponent(document.getElementById("lang").value) + "&code=" + encodeURIComponent(document.getElementById("code").value) + "&input=" + encodeURIComponent(document.getElementById("input").value));        });    </script>    </body></html>